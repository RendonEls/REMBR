
<div class= "show-wrap-1">
  <div class="show-wrap-2">
    <p>{{user.email}}</p>
    <div class="show-wrap-3">
        {{!-- <h3>REMBR Board</h3> --}}
        <div class="column-1">
                {{#if user}}
                  <section class="bookmarks">
                    <div>
                      {{!-- <p>{{user.email}}</p> --}}
                      <div>
                        <ul>
                  {{#each user.bookmark}}
                
                  <div class="{{id}}">
                    <a href="{{url}}">{{title}}</a>
                        <li>{{text}}</li>

                  </div>
                  <div> 
                    <form method="GET" action="/user/{{id}}/updateBookmark">
                      <div class= "bookmark-update-button">
                        <input type="submit" value="update">
                      </div>
                    </form>
                  </div>
                    <div> 
                    <form method="POST" action="/user/{{id}}?_method=DELETE">
                      <div class = "bookmark-delete-button">
                        <input type="submit" value="Delete">
                      </div>
                    </form>
                  </div>
                  <p></p>
                  {{/each}}
                  </ul>
                  </div>
                    </div>
                  </section>
                  <div class="show-button">
                   <input type="submit" value="Add New Bookmark" onclick="location.href='/user/newBookmark'">
                  </div>
          </div>



    <div class="column-2">
        <section class="note">
              <div>
                <ul>
          {{#each user.note}}
        
          <div class="{{id}}">
            
                <h4>{{title}}</h4>
                <li>{{note}}</li>

          </div>
          <div> 
            </form>
          </div>
            <div> 
            <form method="POST" action="/user/note/{{id}}?_method=DELETE">
              <div class="note-delete-button">
                <input type="submit" value="remove">
              </div>
            </form>
          </div>
          <p></p>
          {{/each}}
          </ul>
          </div>
        </section>
        {{/if}}

       <div class="show-button">
          <input type="submit" value="Add New Note" class="btn waves-effect waves-light" onclick="location.href='/user/newNote'">
        </div>
  </div>
    </div>
  </div>
</div>